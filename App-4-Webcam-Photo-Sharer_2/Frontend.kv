<VidScreen>:
    GridLayout:
        cols: 1
        padding: 5
        spacing: 5
        Camera:
            id: camera
            resolutions: (640, 480)
            # play: True
            play: False
        Button:
            id: record_btn
            text: "Start Recording"
            size_hint_y: 0.1
            on_press: root.record() if root.ids.camera.play == False else root.stop()
        Button:
            id: cap_btn
            text: "Capture image"
            size_hint_y: 0.1
            on_press: root.capture()

<ImgScreen>:
    GridLayout:
        cols:1
        Image:
            id: cap_image
        Button:
            size_hint_y: 0.15
            id: create_link
            text: "Create sharable link"
        Label:
            size_hint_y: 0.15
            id: label_link
        GridLayout:
            cols:2
            size_hint_y: 0.2
            Button:
                text: "Copy"
                id: copy_link
            Button:
                text: "Open link"
                id: open_link


<RootWidget>:
    VidScreen:
        id: vid_screen
        name: "vid_screen"
    ImgScreen:
        id: img_screen
        name: "img_screen"