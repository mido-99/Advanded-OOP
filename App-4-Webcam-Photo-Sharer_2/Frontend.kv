<VidScreen>:
    GridLayout:
        cols: 1
        padding: 5
        spacing: 5
        Camera:
            id: camera
            resolutions: (640, 480)
            # play: True
            play: False
        Button:
            id: record_btn
            text: "Start Recording"
            size_hint_y: 0.1
            on_press: root.record() if root.ids.camera.play == False else root.stop()
        Button:
            id: cap_btn
            text: "Capture image"
            size_hint_y: 0.1
            on_press: root.capture()

<ImgScreen>:
    GridLayout:
        cols:1
        padding: 3
        spacing: 3
        Image:
            id: cap_image
        Button:
            id: create_link
            size_hint_y: 0.1
            text: "Create sharable link"
            on_press: root.create_link()
        Label:
            id: label_link
            size_hint_y: 0.1
        GridLayout:
            cols:3
            size_hint_y: 0.1
            padding: 3
            # spacing: 5
            Button:
                id: back_btn
                size_hint_x: 0.25
                text: "< Back"
                on_press: root.go_back()
            Button:
                id: copy_link
                text: "Copy"
                on_press: root.copy_link()
            Button:
                id: open_link
                text: "Open link"
                on_press: root.open_link()


<RootWidget>:
    VidScreen:
        id: vid_screen
        name: "vid_screen"
    ImgScreen:
        id: img_screen
        name: "img_screen"